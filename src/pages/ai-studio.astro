---
import Layout from "../layouts/Layout.astro";
import { getSession } from "auth-astro/server";
import { StudioSection } from "../components/StudioSection";
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const session = await getSession(Astro.request);
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("aiStudio.pageTitle")}>
    <main class="min-h-screen pt-20 md:pl-72 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <!-- Breadcrumbs -->
            <nav class="flex items-center gap-2 text-sm text-slate-500 mb-8">
                <a href="/" class="hover:text-blue-500 transition-colors">
                    {t("aiStudio.breadcrumbHome")}
                </a>
                <span>/</span>
                <span class="text-slate-900 dark:text-white font-semibold">
                    {t("aiStudio.breadcrumbStudio")}
                </span>
            </nav>

            <!-- Page Header -->
            <div class="mb-10 animate-fade-in">
                <h1
                    class="text-4xl md:text-5xl font-black text-slate-900 dark:text-white mb-4 tracking-tight"
                >
                    {t("aiStudio.title")}
                    <span class="gradient-text"
                        >{t("aiStudio.titleHighlight")}</span
                    >
                </h1>
                <p
                    class="text-xl text-slate-600 dark:text-slate-400 max-w-3xl leading-relaxed"
                >
                    {t("aiStudio.description")}
                </p>
            </div>

            <!-- Features Grid -->
            <div
                class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 animate-slide-up"
            >
                <div
                    class="p-6 rounded-3xl bg-blue-500/5 border border-blue-500/10"
                >
                    <div class="text-2xl mb-3">ðŸ”’</div>
                    <h3 class="font-bold text-slate-900 dark:text-white mb-2">
                        {t("aiStudio.privacyTitle")}
                    </h3>
                    <p
                        class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed"
                    >
                        {t("aiStudio.privacyDesc")}
                    </p>
                </div>
                <div
                    class="p-6 rounded-3xl bg-purple-500/5 border border-purple-500/10"
                >
                    <div class="text-2xl mb-3">âš¡</div>
                    <h3 class="font-bold text-slate-900 dark:text-white mb-2">
                        {t("aiStudio.performanceTitle")}
                    </h3>
                    <p
                        class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed"
                    >
                        {t("aiStudio.performanceDesc")}
                    </p>
                </div>
                <div
                    class="p-6 rounded-3xl bg-indigo-500/5 border border-indigo-500/10"
                >
                    <div class="text-2xl mb-3">ðŸ§ </div>
                    <h3 class="font-bold text-slate-900 dark:text-white mb-2">
                        {t("aiStudio.multiModelTitle")}
                    </h3>
                    <p
                        class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed"
                    >
                        {t("aiStudio.multiModelDesc")}
                    </p>
                </div>
            </div>

            <StudioSection client:load initialSession={session} lang={lang} />
        </div>
    </main>
</Layout>
