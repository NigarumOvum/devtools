---
import { ResetPasswordForm } from "../../components/auth/ResetPasswordForm";
const token = Astro.url.searchParams.get("token") || "";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>Reset Password - Multi-Tools</title>
    </head>
    <body
        class="bg-black text-white min-h-screen flex items-center justify-center"
    >
        {
            token ? (
                <ResetPasswordForm client:load token={token} />
            ) : (
                <div class="text-center p-8 bg-gray-900 border border-gray-800 rounded-2xl shadow-2xl">
                    <h2 class="text-2xl font-bold text-red-400 mb-4">
                        Invalid Link
                    </h2>
                    <p class="text-gray-400 mb-6">
                        The password reset link is missing or invalid.
                    </p>
                    <a href="/" class="text-blue-400 hover:underline">
                        Go back home
                    </a>
                </div>
            )
        }
    </body>
</html>
