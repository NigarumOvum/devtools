---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../utils/i18n";
import { getSession } from "auth-astro/server";
import { AuthButton } from "../components/AuthButton";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const session = await getSession(Astro.request);
---

<Layout title={t("main.title")}>
  <main
    id="main-content"
    class="md:pl-72 h-[calc(100vh-5rem)] overflow-y-auto snap-y snap-mandatory scroll-smooth pt-20"
  >
    <!-- Hero Section -->
    <section
      class="h-[calc(100vh-5rem)] snap-start flex flex-col justify-center items-center text-center px-4 relative overflow-hidden"
    >
      <div
        class="absolute inset-0 bg-gradient-to-br from-blue-600/5 via-transparent to-purple-600/5 -z-10"
      >
      </div>
      <div class="max-w-4xl mx-auto">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-accent-100 dark:bg-accent-900/30 text-accent-600 dark:text-accent-400 text-sm font-medium mb-6 animate-fade-in"
        >
          <span>‚ö°</span>
          <span>{t("main.essentialTools")}</span>
        </div>
        <h1
          class="text-4xl md:text-6xl lg:text-7xl font-black mb-6 tracking-tight"
        >
          <span class="gradient-text">{t("main.title")}</span>
        </h1>
        <p
          class="text-lg md:text-2xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto leading-relaxed mb-10"
        >
          {t("main.description")}
        </p>

        <div class="flex flex-wrap justify-center gap-3 animate-slide-up">
          <span
            class="px-4 py-2 rounded-xl bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-sm font-bold"
            >‚öõÔ∏è React</span
          >
          <span
            class="px-4 py-2 rounded-xl bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 text-sm font-bold"
            >üíö Vue</span
          >
          <span
            class="px-4 py-2 rounded-xl bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 text-sm font-bold"
            >üî• Svelte</span
          >
          <span
            class="px-4 py-2 rounded-xl bg-purple-100 dark:bg-purple-900/30 text-purple-600 dark:text-purple-400 text-sm font-bold"
            >üöÄ Astro</span
          >
        </div>

        <div class="mt-12 animate-bounce">
          <a
            href="#ai-studio-cta"
            class="text-slate-400 hover:text-blue-500 transition-colors"
          >
            <svg
              class="w-8 h-8 mx-auto"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- AI Multi-Agent Studio CTA -->
    <section
      id="ai-studio-cta"
      class="h-[calc(100vh-5rem)] snap-start flex flex-col justify-center items-center px-4 relative"
    >
      <div class="max-w-5xl w-full">
        <div
          class="relative overflow-hidden group glass-card rounded-[3rem] p-1 border-0 shadow-2xl"
        >
          <div
            class="absolute inset-0 bg-gradient-to-br from-blue-600/20 via-purple-600/20 to-indigo-600/20 group-hover:scale-110 transition-transform duration-700"
          >
          </div>
          <div class="relative p-10 md:p-16 text-center">
            <div
              class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-blue-500/10 text-blue-400 text-sm font-bold mb-8 ring-1 ring-blue-500/20"
            >
              <span>‚ú®</span>
              {t("studio.newFeature")}
            </div>
            <h2
              class="text-4xl md:text-5xl font-black text-white mb-6 tracking-tight"
            >
              {t("studio.title")}
              <span class="gradient-text">{t("studio.titleHighlight")}</span>
            </h2>
            <p
              class="text-lg text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed"
            >
              {t("studio.description")}
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a
                href="/ai-studio"
                class="bg-white text-slate-900 hover:bg-slate-100 px-10 py-4 rounded-2xl font-black text-sm uppercase tracking-widest transition-all shadow-xl shadow-white/10 active:scale-95"
              >
                {t("studio.enterStudio")}
              </a>
              {
                !session && (
                  <AuthButton client:load session={session} lang={lang} />
                )
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About & Footer -->
    <section
      id="about"
      class="h-[calc(100vh-5rem)] snap-start flex flex-col justify-center px-4 relative"
    >
      <div class="max-w-4xl mx-auto w-full">
        <div
          class="glass-morph rounded-[3rem] p-12 text-center relative overflow-hidden shadow-2xl border border-slate-200/20"
        >
          <div class="absolute inset-0 bg-blue-500/5 -z-10"></div>
          <h2
            class="text-3xl md:text-5xl font-black text-slate-900 dark:text-white mb-8 tracking-tight uppercase italic"
          >
            {t("about.title")}
            <span class="gradient-text">{t("about.titleHighlight")}</span>
          </h2>
          <p
            class="text-xl text-slate-600 dark:text-slate-400 mb-10 leading-relaxed max-w-2xl mx-auto font-medium"
          >
            {t("about.description")}
          </p>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div
              class="p-6 rounded-3xl bg-white/50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 backdrop-blur-xl"
            >
              <div class="text-4xl font-black gradient-text mb-1">28</div>
              <div
                class="text-[10px] font-black text-slate-500 uppercase tracking-widest"
              >
                {t("main.tools")}
              </div>
            </div>
            <div
              class="p-6 rounded-3xl bg-white/50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 backdrop-blur-xl"
            >
              <div class="text-4xl font-black gradient-text mb-1">3</div>
              <div
                class="text-[10px] font-black text-slate-500 uppercase tracking-widest"
              >
                {t("main.frameworks")}
              </div>
            </div>
            <div
              class="p-6 rounded-3xl bg-white/50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 backdrop-blur-xl"
            >
              <div class="text-4xl font-black gradient-text mb-1">0</div>
              <div
                class="text-[10px] font-black text-slate-500 uppercase tracking-widest"
              >
                {t("main.serverside")}
              </div>
            </div>
            <div
              class="p-6 rounded-3xl bg-white/50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 backdrop-blur-xl"
            >
              <div class="text-4xl font-black gradient-text mb-1">‚àû</div>
              <div
                class="text-[10px] font-black text-slate-500 uppercase tracking-widest"
              >
                {t("main.speed")}
              </div>
            </div>
          </div>
        </div>

        <footer
          class="mt-20 text-center text-slate-400 font-black uppercase tracking-[0.2em] text-[10px]"
        >
          <p>{t("about.footer")} &copy; 2026</p>
        </footer>
      </div>
    </section>
  </main>

  <script>
    function setupScrollreveal() {
      const observerOptions = {
        threshold: 0.15,
        rootMargin: "0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("active");
          }
        });
      }, observerOptions);

      document.querySelectorAll(".reveal-on-scroll").forEach((el) => {
        observer.observe(el);
      });
    }

    setupScrollreveal();
    document.addEventListener("astro:after-swap", setupScrollreveal);
  </script>
</Layout>
