---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../utils/i18n";
import { getSession } from "auth-astro/server";
import { AuthButton } from "../components/AuthButton";

const session = await getSession(Astro.request);
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Stats for the page (can be fetched or hardcoded)
const stats = [
    { label: t("agents.activeAgents"), value: "12", color: "text-blue-400" },
    { label: t("agents.totalRuns"), value: "1.2k", color: "text-purple-400" },
    { label: t("agents.cloudUsage"), value: "84%", color: "text-emerald-400" },
];
---

<Layout title={t("agents.pageTitle")}>
    
    <main class="min-h-screen pt-20 transition-all duration-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        {!session ? (
            <div class="flex flex-col items-center justify-center py-20 text-center animate-fade-in">
                <div class="w-24 h-24 rounded-[2rem] bg-slate-900 border border-slate-800 flex items-center justify-center text-5xl mb-8 shadow-2xl">
                    ðŸ”’
                </div>
                <h2 class="text-4xl font-black text-white mb-4 tracking-tight uppercase">{t("agents.restricted")}</h2>
                <p class="text-slate-400 max-w-md mb-10 text-lg">
                    {t("agents.restrictedDesc")}
                </p>
                <AuthButton client:load session={session} lang={lang} />
            </div>
        ) : (
            <>
                <header class="mb-12 animate-slide-up">
                    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
                        <div>
                            <h1 class="text-5xl font-black text-white mb-4 tracking-tighter uppercase italic">
                                {t("agents.commandCenter")} <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-indigo-600">{t("agents.commandCenterHighlight")}</span> {t("agents.commandCenterSuffix")}
                            </h1>
                            <p class="text-slate-400 max-w-2xl text-lg font-medium leading-relaxed">
                                {t("agents.description")}
                            </p>
                        </div>

                        <a
                            href="/studio#expert-chat"
                            class="px-8 py-4 rounded-3xl bg-white text-slate-950 font-black uppercase tracking-widest transition-all hover:scale-105 active:scale-95 shadow-xl shadow-white/10 flex items-center gap-3"
                        >
                            <span class="text-xl">+</span> {t("agents.createNew")}
                        </a>
                    </div>
                </header>

                <!-- Stats Bar -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 animate-slide-up" style="animation-delay: 100ms;">
                    {stats.map((s) => (
                        <div class="glass-card p-8 rounded-[2.5rem] border border-slate-700/50 relative overflow-hidden group">
                            <div class="absolute inset-0 bg-gradient-to-br from-blue-600/5 via-indigo-600/5 to-purple-600/5 opacity-0 group-hover:opacity-100 transition-opacity" />
                            <div class="relative z-10 text-center">
                                <div class={`text-4xl font-black mb-2 ${s.color}`}>
                                    {s.value}
                                </div>
                                <div class="text-xs font-black text-slate-500 uppercase tracking-widest">
                                    {s.label}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>

                <section
                    id="agents-grid"
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-slide-up"
                    style="animation-delay: 200ms;"
                >
                    <div class="flex flex-col items-center justify-center p-12 glass-card rounded-[3rem] border-2 border-dashed border-slate-700/50 bg-slate-900/20 text-center min-h-[400px] group hover:border-blue-500/50 transition-colors">
                        <div class="w-20 h-20 rounded-3xl bg-slate-800 flex items-center justify-center text-4xl mb-6 text-slate-500 group-hover:scale-110 group-hover:bg-blue-600/20 group-hover:text-blue-400 transition-all duration-500">
                            âž•
                        </div>
                        <h3 class="text-xl font-bold text-white mb-2">
                            {t("agents.buildNew")}
                        </h3>
                        <p class="text-sm text-slate-500 max-w-xs leading-relaxed mb-8">
                            {t("agents.buildNewDesc")}
                        </p>
                        <a
                            href="/studio"
                            class="px-8 py-3 rounded-2xl bg-blue-600/10 border border-blue-500/20 text-blue-400 font-bold hover:bg-blue-600/20 transition-all"
                        >
                            {t("agents.openStudio")}
                        </a>
                    </div>

                    {/* Custom agents will be loaded here via Client-Side React soon */}
                </section>
            </>
        )}
        </div>
    </main>
</Layout>

<style>
    .glass-card {
        background: rgba(15, 23, 42, 0.4);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
    }
</style>
